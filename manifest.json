{
  "manifest_version": 3,
  "name": "Automação de Peças e Kits CURSOR",
  "version": "1.0",
  "description": "Extensão para automatizar a geração de peças e kits no sistema de polícia.",
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "https://spp.pc.pe.gov.br/*"
  ],
  "host_permissions": ["https://spp.pc.pe.gov.br/*"],
  "content_scripts": [
    {
      "matches": ["https://spp.pc.pe.gov.br/*"],
      "js": [
        "token.js",
        "extrairIdDoProcedimento.js",
        "urlFactory.js",
        "apiRepository.js",
        "dataAdapter.js",
        "controller.js",
        "observarBotao.js",
        "sideBar.js",
        "main.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
